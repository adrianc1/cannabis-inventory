<div class="max-w-4xl mx-auto my-6">
  <h2 class="text-2xl font-bold mb-4">Product Inventory: <%= product.name %></h2>

  <div class="mb-4 p-4 bg-gray-100 rounded-md flex justify-between">
    <div>
      <strong>Total Quantity:</strong> 
      <%= productInventory.reduce((sum, batch) => {
        const childrenTotal = (batch.packages || []).reduce((cSum, pkg) => cSum + Number(pkg.quantity), 0);
        const remainder = Math.max(0, Number(batch.quantity) - childrenTotal);
        return sum + childrenTotal + remainder;
      }, 0) %>
    </div>
  </div>

  <table class="w-full table-auto border-collapse border border-gray-300">
    <thead>
      <tr class="bg-gray-200 text-left">
        <th class="px-3 py-2 border border-gray-300">Lot #</th>
        <th class="px-3 py-2 border border-gray-300">Location</th>
        <th class="px-3 py-2 border border-gray-300">Quantity</th>
        <th class="px-3 py-2 border border-gray-300">Cost Price</th>
        <th class="px-3 py-2 border border-gray-300">Total Value</th>
        <th class="px-3 py-2 border border-gray-300">Status</th>
        <th class="px-3 py-2 border border-gray-300">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% productInventory.forEach(batch => { %>
        <% 
          const statusClasses = { 
            active: 'bg-green-100 text-green-800',
            inactive: 'bg-gray-200 text-gray-700',
            quarantine: 'bg-yellow-100 text-yellow-800',
            damaged: 'bg-red-100 text-red-800',
            expired: 'bg-orange-100 text-orange-800',
            reserved: 'bg-blue-100 text-blue-800',
          };
          const statusClass = statusClasses[batch.status] || 'bg-gray-100 text-gray-800';

          const childrenTotal = (batch.packages || []).reduce((sum, pkg) => sum + Number(pkg.quantity), 0);
          const remainderQty = Math.max(0, Number(batch.quantity) - childrenTotal);
        %>
        
      <!-- Parent Row -->
      <tr class="batch-row cursor-pointer bg-gray-50 hover:bg-gray-100" data-batch-id="<%= batch.id %>">
        <td class="px-3 py-2 border border-gray-300 font-semibold cursor-pointer">
          <%= batch.lot_number %> (Master)
          <% if (batch.packages && batch.packages.length) { %>
            <span class="ml-2 text-xs text-gray-500">
              <%= batch.packages.length %> packages
            </span>
          <% } %>
        </td>
        <td class="px-3 py-2 border border-gray-300"><%= batch.location || '-' %></td>
        <td class="px-3 py-2 border border-gray-300"><%= batch.quantity %></td>
        <td class="px-3 py-2 border border-gray-300">$<%= Number(batch.cost_price || 0).toFixed(2) %></td>
        <td class="px-3 py-2 border border-gray-300">$<%= Number(batch.quantity * (batch.cost_price || 0)).toFixed(2) %></td>
        <td class="px-3 py-2 border border-gray-300">
          <span class="inline-block px-2 py-1 rounded-full text-xs font-medium capitalize <%= statusClass %>">
            <%= batch.status %>
          </span>
        </td>
        <td class="px-3 py-2 border border-gray-300">
          <a href="/products/<%= product.id %>/adjust/<%= batch.lot_number %>" class="btn-secondary">Adjust</a>
          <% if (batch.quantity > 0 ) { %>
            <a href="/products/<%= product.id %>/split/<%= batch.lot_number %>" 
              class="btn-tertiary">
              Package / Split
            </a>
          <% } %>
         
        </td>
      </tr>

      <!-- Child Rows -->
      <% (batch.packages || []).forEach(pkg => { %>
  <% const pkgStatusClass = statusClasses[pkg.status] || 'bg-gray-100 text-gray-800'; %>
      <tr data-parent-id="batch-<%= batch.id %>" class="hidden bg-white">
        <td class="px-3 py-2 border border-gray-300 pl-6">↳ <%= pkg.lot_number %></td>
        <td class="px-3 py-2 border border-gray-300"><%= pkg.location %></td>
        <td class="px-3 py-2 border border-gray-300"><%= pkg.quantity %></td>
        <td class="px-3 py-2 border border-gray-300">$<%= Number(pkg.cost_price || 0).toFixed(2) %></td>
        <td class="px-3 py-2 border border-gray-300">$<%= Number(pkg.quantity * (pkg.cost_price || 0)).toFixed(2) %></td>
        <td class="px-3 py-2 border border-gray-300">
          <span class="inline-block px-2 py-1 rounded-full text-xs font-medium capitalize <%= pkgStatusClass %>">
            <%= pkg.status %>
          </span>
        </td>
        <td class="px-3 py-2 border border-gray-300">
          <a href="/products/<%= product.id %>/adjust/<%= pkg.lot_number %>" class="btn-secondary">Adjust</a>
        </td>
      </tr>
    <% }) %>
      <% if(batch.remainderQty > 0) { %>
      <tr data-parent-id="batch-<%= batch.id %>" class="hidden bg-gray-50 font-medium">
        <td class="px-3 py-2 border border-gray-300 pl-6"> <%= batch.lot_number %>↳ Remainder</td>
        <td class="px-3 py-2 border border-gray-300">-</td>
        <td class="px-3 py-2 border border-gray-300"><%= batch.remainderQty %></td>
        <td class="px-3 py-2 border border-gray-300">$<%= Number(batch.cost_price || 0).toFixed(2) %></td>
        <td class="px-3 py-2 border border-gray-300">$<%= Number(batch.remainderQty * (batch.cost_price || 0)).toFixed(2) %></td>
        <td class="px-3 py-2 border border-gray-300">N/A</td>
        <td class="px-3 py-2 border border-gray-300">
          <a href="/products/<%= product.id %>/adjust/<%= batch.lot_number %>" class="btn-secondary">Adjust</a>
        </td>
      </tr>
      <% } %>
            <% }) %>
          </tbody>
        </table>

      <script>
      document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.batch-row').forEach(row => {
          row.addEventListener('click', () => {
            const id = row.dataset.batchId;
            if (!id) return; 
            document.querySelectorAll(`[data-parent-id="batch-${id}"]`).forEach(child => {
              child.classList.toggle('hidden');
            });
          });
        });
      });
      </script>
</div>